@model Leave.Models.RegisterVM

@{
    ViewBag.Title = "Registration";
}
<div class="container">
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>@ViewBag.Title</legend>

            <div class="form-group">
                @Html.LabelFor(model => model.username, new { @class = "col-xs-2 control-label" })
                @Html.TextBoxFor(model => model.username, new { @class = "input-sm" })
                @Html.ValidationMessageFor(model => model.username)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.password, new { @class = "col-xs-2 control-label" })
                @Html.PasswordFor(model => model.password, new { @class = "input-sm" })
                @Html.ValidationMessageFor(model => model.password)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-xs-2 control-label" })
                @Html.EditorFor(model => model.ConfirmPassword, new { @class = "input-sm" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.employee_id, new { @class = "col-xs-2 control-label" })
                @Html.DropDownList("employee_id", (SelectList)ViewBag.employeelist, "--Select employee--", new { @class = "input-sm" })
                @Html.ValidationMessageFor(model => model.employee_id)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.role_id, new { @class = "col-xs-2 control-label" })
                @Html.DropDownList("role_id", (SelectList)ViewBag.rolelist, "--Select role--", new { @class = "input-sm" })
                @Html.ValidationMessageFor(model => model.role_id)
            </div>

            <div class="form-group">
                <div class="col-xs-4 col-xs-offset-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </fieldset>
    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
