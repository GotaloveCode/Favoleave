@model Leave.Models.leave_period

@{
    ViewBag.Title = "Edit Period";
}
<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Edit Period</legend>

            @Html.HiddenFor(model => model.id)

            <div class="form_group">
                @Html.LabelFor(model => model.startdate)
            </div>
            <div class="form-group">
                <div class='input-group date col-md-2' id='datetimepicker1'>
                    @Html.TextBoxFor(model => model.startdate, new { @class = "form-control", @id = "startdate", @Value = Model.startdate.ToString("d MMM yyyy") })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.startdate)
            </div>

            <div class="form_group">
                @Html.LabelFor(model => model.enddate)
            </div>
            <div class="form-group">
                <div class='input-group date col-md-2' id='datetimepicker1'>
                    @Html.TextBoxFor(model => model.enddate, new { @class = "form-control", @id = "enddate", @Value = Model.enddate.ToString("d MMM yyyy") })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.enddate)
            </div>

            <div class="form_group">
                @Html.LabelFor(model => model.active)
            </div>
            <div class="form_group">
                @Html.DropDownList("active", new List<SelectListItem>
                 {
                    new SelectListItem{ Text="Active", Value = "1" },
                    new SelectListItem{ Text="Not-Active", Value = "0" }
                 }, new { @class = "input-sm" })
                @Html.ValidationMessageFor(model => model.active)
            </div>
            <div class="form-group">
                
            </div>
            <div class="form_group">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Period", null, new {@class="btn btn-primary" })
            </div>
        </fieldset>
    }

    <div>
       
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/Scripts/bootstrap-datepicker.js")

<script>
    $(function () {
            $("#startdate").datepicker({
                format: 'd M yyyy',
                autoclose: true
            });
            $("#enddate").datepicker({
                format: 'd M yyyy',
                autoclose: true
            });
        });

</script>
    }
