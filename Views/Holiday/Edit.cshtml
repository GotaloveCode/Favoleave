@model Leave.Models.holiday

@{
    ViewBag.Title = "Edit Holiday";
}
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>@ViewBag.Title </legend>

            @Html.HiddenFor(model => model.id)

            <div class="editor-label">
                @Html.LabelFor(model => model.name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.name)
                @Html.ValidationMessageFor(model => model.name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.date)
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.date, "{0:d MMM yyyy}", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.date)
                </div>
            </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.recurs)
                </div>
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.recurs)
                    @Html.ValidationMessageFor(model => model.recurs)
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                </div>
</fieldset>
    }


</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/bootstrap-datepicker.js")
<script type="text/javascript">
            $(function () {
                $("#date").datepicker({
                    format: 'd M yyyy',
                    autoclose: true
                });

            });
 </script>
           
  }


