@model Leave.Models.HolidayVM

@{
    ViewBag.Title = "Create Holiday";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>@ViewBag.Title</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.name)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.name, new { @class = "input-sm" })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.date)
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <div class="input-group date" id="datetimepicker1">
                            @Html.TextBoxFor(model => model.date, "{0:d MMM yyyy}", new { @class = "form-control" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-10"></div>
                </div>
               @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.recurs)
            </div>
            <div class="form-group">
                @Html.CheckBoxFor(model => model.recurs)
                @Html.ValidationMessageFor(model => model.recurs)
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </fieldset>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/bootstrap-datepicker.js")

    <script type="text/javascript">
        $(function () {
            $("#date").datepicker({
                format: 'd M yyyy',
                autoclose: true,
                changemonth:true
            });
        });
    </script>
}
